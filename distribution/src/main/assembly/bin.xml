<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>doc/javadoc/${artifact.artifactId}</outputDirectory>
            <includes>
                <include>*:*:jar:javadoc:${project.version}</include>
            </includes>
            <scope>provided</scope>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <!-- shell scripts provided from other modules -->
            <directory>${distribution.directory}</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
			<lineEnding>lf</lineEnding>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <!-- all files provided by other modules excluding shell scripts -->
            <directory>${distribution.directory}</directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>**/*.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!-- extra distribution files -->
            <directory>src/main/distribution</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <!-- documentation -->
            <outputDirectory>doc</outputDirectory>
            <directory>${project.build.directory}/generated-docs</directory>
            <includes>
                <include>*.html</include>
                <include>images/**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>